<h1>Real Time Products</h1>
<ul class="products-list">
    {{#each products}}
        <div class="products-item">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <span>{{this.price}}</span>
            {{#each this.thumbnails}}
                <img class="thumbnail" src={{this}} alt="foto" srcset="">
            {{/each}}
        </div>
    {{/each}}
</ul>
<hr>

<h2>Create a product</h2>

<form class="post-product" action="/api/products" method="post">
            <label>Nombre</label>
            <input type="text" name="title">
            <label>Descripcion</label>
            <input type="text" name="description">
            <label>Precio</label>
            <input type="number" name="price">
            <label>Codigo</label>
            <input type="text" name="code">
            <label>Stock</label>
            <input type="number" name="stock" min="1" max="100">
            <label>Categoria</label>
            <input type="text" name="category">
            <label>Imagenes</label>
            <input type="file" name="thumbnails" multiple >
            <button type="submit">Enviar</button>
        </form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>
